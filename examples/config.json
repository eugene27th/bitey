{
    "port": 30000,

    "cors": {
        "origin": [
            "http://127.0.0.1:3000",
            "https://domain.com"
        ],
        "headers": [
            "content-type",
            "content-length",
            "host",
            "user-agent",
            "accept",
            "accept-encoding",
            "connection",
            "cache-control",
            "cookie",
            "session",
            "cf-connecting-ip",
            "cf-ipcountry",
            "challenge"
        ],
        "credentials": true
    },

    "session": {
        "name": "bitey-example",
        "secret": "something-secret",
        "termination_new_ip": true,
        "options": {
            "path": "/",
            "age": 604800,
            "domain": ".domain.name",
            "samesite": "None",
            "secure": true
        }
    },

    "password": {
        "salt": "something-very-secret",
        "length": 32
    },

    "mysql": {
        "host": "127.0.0.1",
        "user": "username",
        "database": "databasename",
        "password": "password",
        "waitForConnections": true,
        "connectionLimit": 1,
        "queueLimit": 0,
        "multipleStatements": true,
        "timezone": "+02:00"
    },
    
    "redis": {
        "host": "127.0.0.1",
        "port": 6379,
        "password": "password"
    },

    "cloudflare": {
        "turnstile": {
            "secret_key": "secret_key",
            "site_key": "site_key"
        }
    }
}